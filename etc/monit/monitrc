set daemon 30
set logfile /var/log/monit.log

check process love_pict with pidfile /home/love/mystuff/love/server/start/twistd.pict.pid
  start program = "/home/love/mystuff/love/server/start/start.sh pict"
    as uid love and gid love
  stop program = "/home/love/mystuff/love/server/start/stop.sh pict"
  if totalmem > 300.0 MB then restart
  group server

check process flashpolicytwistd with pidfile /var/run/flashpolicytwistd
  start program = "/etc/init.d/flashpolicytwistd start"
  stop program = "/etc/init.d/flashpolicytwistd stop"
  if cpu is greater than 80% for 3 cycles then restart
  if failed host love.ciliz.com port 843
     send "<policy-file-request/>\0x00"
     expect ".+"
  then restart
  group server
